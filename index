            width: 90%;
        }
        canvas {
            background: linear-gradient(to top, #ff99cc, #ffccff);
            display: block;
            border: 5px solid white;
            border-radius: 15px;
            box-shadow: 0px 0px 10px #ff66b2;
        }
        button {
            padding: 10px 20px;
            font-size: 20px;
            background: #ff66b2;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 2px 2px 5px #ff0099;
        }
        button:hover {
            background: #ff3385;
        }
        #guestbook, #music, #leaderboard {
            padding: 10px;
            background: white;
            border-radius: 10px;
            width: 250px;
            box-shadow: 2px 2px 10px #ff66b2;
        }
        iframe {
